package action;

import java.util.Calendar;

public class Time_get {
	int nH = 0;
	int nM = 0;
	int sH = 0;
	int sM = 0;

	public Time_get() {
		// Œ»İŠÔ
		Calendar now = Calendar.getInstance();
		nH = now.get(now.HOUR_OF_DAY); // Œ»İ 
		nM = now.get(now.MINUTE); // Œ»İ •ª

		// ŒJ‚èã‚°—p‚ÌŠÔ
		int sH = nH; // ŒJã‚° 
		int sM = 0; // ŒJã‚° •ª

		// 15•ª’PˆÊ‚ÌŠÔ‚É•ÏX
		if (nM == 0) {
			sM = 0;
		} else if (nM <= 15) {
			sM = 15;
		} else if (nM <= 30) {
			sM = 30;
		} else if (nM <= 45) {
			sM = 45;
		} else {
			sM = 0;
			sH = nH + 1;
		}
	}

	public String nowHour() {
		String snH = String.valueOf(nH);
		return (snH);
	}

	public int nowMinute() {
		return (nM);
	}

	public int startHour() {
		return (sH);
	}

	public int startMinute() {
		return (sM);
	}

}
