package util;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class DBConnect {

	public static Connection getConnect() throws SQLException {

		//DB接続用 MySQL用
		String host = "localhost";								// ホスト
		String dbname = "attendance_management";				// DB名
		String user = "root";									// ユーザー
		String pw = "abcd";										// パスワード
		String url = "jdbc:mysql://" + host + "/" + dbname;		// 接続用URL
		return (DriverManager.getConnection(url, user, pw));	// 接続用文を返す
	}

}
