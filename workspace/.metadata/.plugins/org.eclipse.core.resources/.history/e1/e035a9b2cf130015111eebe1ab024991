package action;

import java.util.Calendar;

public class Time_get {
	int nH = 0;
	int nM = 0;
	int sH = 0;
	int sM = 0;

	public Time_get() {
		// Œ»İŠÔ
		Calendar now = Calendar.getInstance();
		nH = now.get(now.HOUR_OF_DAY); // Œ»İ 
		nM = now.get(now.MINUTE); // Œ»İ •ª

		// ŒJ‚èã‚°—p‚ÌŠÔ
		int sH = nH; // ŒJã‚° 
		int sM = 0; // ŒJã‚° •ª

		// 15•ª’PˆÊ‚ÌŠÔ‚É•ÏX
		if (nowMinute == 0) {
			startMinute = 0;
		} else if (nowMinute <= 15) {
			startMinute = 15;
		} else if (nowMinute <= 30) {
			startMinute = 30;
		} else if (nowMinute <= 45) {
			startMinute = 45;
		} else {
			startMinute = 0;
			startHour = nowHour + 1;
		}
	}

	public int nowHour() {
		return (nH);
	}

	public int nowMinute() {
		return (nM);
	}

	public int startHour() {
		return (sH);
	}

	public int startMinute() {
		return (sM);
	}

}
