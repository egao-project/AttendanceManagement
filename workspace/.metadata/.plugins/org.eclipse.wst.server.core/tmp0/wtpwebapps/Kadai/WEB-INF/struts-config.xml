<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts-config PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
   "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="KadaiForm" type="action.form.KadaiForm" />
        <form-bean name="DynaForm" type="org.apache.struts.action.DynaActionForm" />
    </form-beans>

    <action-mappings>
        <action path="/Kadai"
        		type="action.KadaiAction"
        		name="KadaiForm"
        		scope="session"
        		validate="true"
        		input="/main.jsp">
            <forward name="show" path="/ShowResult.jsp" />
        </action>

        <action path="/kako"
        		type="action.KadaiActionKako"
        		name="KadaiForm"
        		scope="session">
            <forward name="kako" path="/kako.jsp" />
        </action>
    </action-mappings>

    <message-resources parameter="ApplicationResources" />

    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
        	value="/org/apache/struts/validator/validator-rules.xml,/WEB-INF/validation.xml" />
    </plug-in>

</struts-config>
