<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts-config PUBLIC
     "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
    "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
        <form-bean name="CatalogForm" type="org.apache.struts.action.DynaActionForm">
            <form-property name="offset" type="java.lang.Integer" />
        </form-bean>
        <form-bean name="CatalogDetailForm" type="org.apache.struts.action.DynaActionForm">
            <form-property name="id" type="java.lang.Integer" />
        </form-bean>
    </form-beans>
    <action-mappings>
        <action name="CatalogForm" path="/Catalog" type="action.CatalogShowAction">
            <forward name="show" path="/catalog.jsp" />
        </action>
        <!-- LookupDispatchActionを利用するための設定 -->
        <action name="CatalogForm" path="/CatalogPage" parameter="action"
            type="action.CatalogPageAction">
            <forward name="show" path="/catalog.jsp" />
        </action>
        <action name="CatalogDetailForm" path="/CatalogDetail"
            type="action.CatalogDetailShowAction">
            <forward name="show" path="/catalogDetail.jsp" />
        </action>
    </action-mappings>
    <message-resources parameter="ApplicationResources" />
</struts-config>
