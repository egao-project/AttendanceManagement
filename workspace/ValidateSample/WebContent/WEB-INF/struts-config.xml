<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts-config PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
    "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
    <form-beans>
        <form-bean name="CheckAgeForm" type="action.form.CheckAgeForm" />
        <form-bean name="CheckAgeForm2" type="action.form.CheckAgeForm2" />
        <form-bean name="CheckAgeForm3"
            type="org.apache.struts.validator.DynaValidatorForm">
            <form-property name="age" type="int" initial="0" />
        </form-bean>
    </form-beans>
    <action-mappings>
        <action name="CheckAgeForm" type="action.CheckAgeAction" path="/CheckAge"
            validate="true" input="/input1.jsp">
            <forward name="checked" path="/AgeChecked.jsp" />
        </action>
        <action name="CheckAgeForm2" type="action.CheckAgeAction" path="/CheckAge2"
            validate="true" input="/input2.jsp">
            <forward name="checked" path="/AgeChecked.jsp" />
        </action>
        <action name="CheckAgeForm3" type="org.apache.struts.actions.ForwardAction"
            path="/CheckAge3" validate="true" input="/input3.jsp" parameter="/AgeChecked.jsp" />
    </action-mappings>
    <message-resources parameter="ApplicationResources" />
    <!-- Plug-inタグの設定 -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
    value="/org/apache/struts/validator/validator-rules.xml, /WEB-INF/validation.xml" />
    </plug-in>
</struts-config>
