<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts-config PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
   "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
   <!-- Form情報の定義 -->
   <form-beans>
      <!-- VariousInputFormという名前(キー)でaction.form.VariousInputFormクラスを利用する -->
      <form-bean name="VariousInputForm"
                 type="action.form.VariousInputForm" />
   </form-beans>
   <!-- アクションの定義 -->
   <action-mappings>
      <!-- Form情報をVariousInputForm、action.VariousInputActionをアクションに指定する -->
      <action name="VariousInputForm"
              type="action.VariousInputAction"
              path="/VariousInput" scope="request">
         <!-- <html:cancel>の脆弱性による例外の発生を抑制する（Struts1.2.9） -->
         <set-property property="cancellable" value="true" />
         <forward name="various" path="/result.jsp" />
      </action>
   </action-mappings>
   <message-resources parameter="ApplicationResources" />
</struts-config>
